<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/margin_spinner_elements"
    android:paddingStart="@dimen/margin_spinner_elements"
    android:paddingRight="@dimen/margin_spinner_elements"
    android:paddingEnd="@dimen/margin_spinner_elements"
    android:paddingTop="@dimen/margin_spinner_top_bottom"
    android:paddingBottom="@dimen/margin_spinner_top_bottom">

    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"

        android:id="@+id/ivSpinDropdownAccountType"

        android:layout_marginTop="8dp"

        android:layout_marginBottom="8dp"
        android:layout_marginRight="@dimen/margin_spinner_elements"
        android:layout_marginEnd="@dimen/margin_spinner_elements"

        android:contentDescription="@string/account_type"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SpinnerFont"
        android:id="@+id/tvSpinDropdownAccountName"

        android:layout_toRightOf="@+id/ivSpinDropdownAccountType"
        android:layout_toEndOf="@+id/ivSpinDropdownAccountType"

        android:layout_marginBottom="@dimen/common_padding_medium"

        android:singleLine="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SubheadFontSecondary"
        android:id="@+id/tvSpinDropdownAccountAmount"

        android:layout_toRightOf="@+id/ivSpinDropdownAccountType"
        android:layout_toEndOf="@+id/ivSpinDropdownAccountType"

        android:layout_below="@+id/tvSpinDropdownAccountName"

        android:singleLine="true"/>


</RelativeLayout>