<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сума"
        android:id="@+id/tvItemFragmentTransactionAmount"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/TitleFont"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Категорія"
        android:id="@+id/tvItemFragmentTransactionCategory"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/TitleFontSecondary"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Рахунок"
        android:id="@+id/tvItemFragmentTransactionAccountName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvItemFragmentTransactionAmount"
        style="@style/TitleFontSecondary"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата"
        android:id="@+id/tvItemFragmentTransactionDate"
        android:layout_below="@+id/tvItemFragmentTransactionCategory"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/TitleFontSecondary"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/custom_divider"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tvItemFragmentTransactionDate"
        android:layout_marginTop="10dp"/>
</RelativeLayout>