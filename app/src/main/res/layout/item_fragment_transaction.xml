<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardItemTransaction"
        card_view:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp">


            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/ivItemFragmentTransactionCurrency"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сума"
        android:id="@+id/tvItemFragmentTransactionAmount"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivItemFragmentTransactionCurrency"
        android:layout_toEndOf="@+id/ivItemFragmentTransactionCurrency"
        style="@style/TitleBigFont" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/ivItemFragmentTransactionCategory"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Рахунок"
        android:id="@+id/tvItemFragmentTransactionAccountName"
        style="@style/TitleFontSecondary"
        android:layout_below="@+id/ivItemFragmentTransactionCategory"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата"
        android:id="@+id/tvItemFragmentTransactionDate"
        style="@style/BodyFontSecondary"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/ivItemFragmentTransactionCategory"
        android:layout_toStartOf="@+id/ivItemFragmentTransactionCategory"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>