<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarMain"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/custom"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextExpenseNameChange"
        android:layout_below="@+id/toolbarMain"
        android:ems="10"
        android:maxLength="20"
        android:hint="@string/expense_name_hint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:textSize="20sp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/expense_add"
        android:id="@+id/btnExpenseChange"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expense_type"
        android:id="@+id/tvExpenseTypeChange"
        android:layout_below="@+id/editTextExpenseNameChange"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="25dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expense_currency"
        android:id="@+id/tvExpenseCurrencyChange"
        android:layout_alignBottom="@+id/tvExpenseTypeChange"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:textSize="20sp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinAddExpenseTypeChange"
        android:layout_below="@+id/tvExpenseTypeChange"
        android:layout_alignLeft="@+id/tvExpenseTypeChange"
        android:layout_alignStart="@+id/tvExpenseTypeChange"
        android:layout_marginTop="25dp"
        android:layout_alignRight="@+id/tvExpenseTypeChange"
        android:layout_alignEnd="@+id/tvExpenseTypeChange"
        android:spinnerMode="dialog"
        android:prompt="@string/expense_type"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinAddExpenseCurrencyChange"
        android:layout_alignBottom="@+id/spinAddExpenseTypeChange"
        android:layout_alignRight="@+id/tvExpenseCurrencyChange"
        android:layout_alignEnd="@+id/tvExpenseCurrencyChange"
        android:layout_alignLeft="@+id/tvExpenseCurrencyChange"
        android:layout_alignStart="@+id/tvExpenseCurrencyChange"
        android:layout_alignTop="@+id/spinAddExpenseTypeChange"
        android:spinnerMode="dialog"
        android:prompt="@string/expense_currency"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="6"
        android:hint="@string/sum_hint"
        android:textSize="20sp"
        android:maxLength="12"
        android:id="@+id/editTextExpenseSumChange"
        android:layout_below="@+id/spinAddExpenseTypeChange"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

</RelativeLayout>