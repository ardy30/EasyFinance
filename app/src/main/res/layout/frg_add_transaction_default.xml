<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/common_padding_large"
        android:paddingLeft="@dimen/common_padding_medium"
        android:paddingStart="@dimen/common_padding_medium"
        android:paddingRight="@dimen/common_padding_medium"
        android:paddingEnd="@dimen/common_padding_medium">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardAddTransactionElements"
        card_view:cardElevation="@dimen/card_elevation_medium">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_padding_large"
            android:paddingStart="@dimen/common_padding_large"
            android:paddingRight="@dimen/common_padding_large"
            android:paddingEnd="@dimen/common_padding_large">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linLayoutAddTransDefSum"
                android:baselineAligned="false">


            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/ivAddTransDefSum"
                android:src="@drawable/ic_numeric_grey600_48dp"
                android:contentDescription="@string/sum_hint"

                android:layout_marginRight="36dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="46dp"/>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilTextTransSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_padding_large">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="6"
                    android:id="@+id/editTextTransSum"
                    android:hint="@string/sum_hint"
                    android:maxLength="12"
                    android:layout_centerHorizontal="true"
                    style="@style/TitleFont"/>

            </android.support.design.widget.TextInputLayout>

            </LinearLayout>



            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup"
                android:layout_below="@+id/linLayoutAddTransDefSum"
                android:orientation='horizontal'
                android:layout_marginLeft="64dp"
                android:layout_marginStart="64dp"

                android:layout_marginTop="24dp">


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonCost"
                    android:checked="true"
                    style="@style/RadioButtonMinusStyle"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonIncome"
                    style="@style/RadioButtonPlusStyle" />


            </RadioGroup>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/cvAddTransDefDivider"
                android:layout_below="@+id/radioGroup"
                android:background="@color/custom_divider"
                android:layout_marginLeft="68dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="48dp"/>




            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linLayoutAddTransDefAccount"
                android:layout_below="@+id/cvAddTransDefDivider"
                android:baselineAligned="false">


                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:id="@+id/ivAddTransDefAccount"
                    android:src="@drawable/ic_cash_multiple_grey600_48dp"
                    android:contentDescription="@string/account"

                    android:layout_marginRight="40dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginTop="18dp"/>


                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/spinAddTransExpense"
                    android:spinnerMode="dialog"
                    android:prompt="@string/account" />

                </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linLayoutAddTransDefAccount"
                android:background="@color/custom_divider"
                android:layout_marginLeft="68dp"
                android:layout_marginStart="68dp" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linLayoutAddTransDefCategory"

                android:layout_below="@+id/linLayoutAddTransDefAccount"

                android:baselineAligned="false">


            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/ivAddTransDefCategory"
                android:src="@drawable/ic_label_grey600_48dp"
                android:contentDescription="@string/category"

                android:layout_marginRight="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="18dp"/>


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/spinAddTransCategory"
                android:spinnerMode="dialog"
                android:prompt="@string/category" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linLayoutAddTransDefCategory"
                android:background="@color/custom_divider"
                android:layout_marginLeft="68dp"
                android:layout_marginStart="68dp" />



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linLayoutAddTransDefDate"

                android:layout_below="@+id/linLayoutAddTransDefCategory"

                android:layout_marginTop="20dp"

                android:baselineAligned="false">


                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:id="@+id/ivAddTransDefDate"
                        android:src="@drawable/ic_calendar_grey600_48dp"
                        android:contentDescription="@string/date"

                        android:layout_marginRight="40dp"
                        android:layout_marginEnd="40dp"
                        />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:id="@+id/tvTransactionDate"
                        android:clickable="true"
                        style="@style/SpinnerFont" />


            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</ScrollView>