<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardItemTransaction"
        card_view:cardElevation="@dimen/card_elevation_small"
        android:layout_marginBottom="@dimen/card_elevation_small">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:paddingLeft="@dimen/common_padding_large"
            android:paddingStart="@dimen/common_padding_large"
            android:paddingRight="@dimen/common_padding_large"
            android:paddingEnd="@dimen/common_padding_large"

            android:paddingTop="@dimen/common_padding_medium"
            android:paddingBottom="@dimen/common_padding_medium">



            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivItemFragmentTransactionAccountType"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"

                android:contentDescription="@string/account_type"/>



            <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvItemFragmentTransactionAmount"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivItemFragmentTransactionAccountType"
        android:layout_toEndOf="@+id/ivItemFragmentTransactionAccountType"
        style="@style/TitleFont" />

            <ImageView
                android:layout_width="@dimen/icon_small"
                android:layout_height="@dimen/icon_small"
                android:id="@+id/ivItemFragmentTransactionCategory"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"

                android:contentDescription="@string/category"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvItemFragmentTransactionAccountName"
        style="@style/SpinnerFontGrey"
        android:layout_below="@+id/tvItemFragmentTransactionAmount"
        android:layout_toRightOf="@+id/ivItemFragmentTransactionAccountType"
        android:layout_toEndOf="@+id/ivItemFragmentTransactionAccountType"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvItemFragmentTransactionDate"
        style="@style/CaptionFontSecondary"
        android:layout_alignBaseline="@+id/tvItemFragmentTransactionAccountName"
        android:layout_alignBottom="@+id/tvItemFragmentTransactionAccountName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>