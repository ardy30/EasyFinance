<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingLeft="@dimen/common_padding_large"
    android:paddingRight="@dimen/common_padding_large"
    android:clickable="true"
    android:background="@drawable/item_nav_selector">


    <ImageView
        android:layout_width="@dimen/icon_small"
        android:layout_height="@dimen/icon_small"
        android:id="@+id/ivItemNavRow"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvItemNavRow"
        android:layout_marginLeft="@dimen/common_padding_xlarge"
        style="@style/SubheadFontSecondary"
        android:singleLine="true"
        android:layout_gravity="center_vertical"/>

</LinearLayout>