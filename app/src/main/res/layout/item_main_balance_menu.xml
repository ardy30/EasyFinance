<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutItemMainBalanceMenuExchangeType"
        android:layout_alignParentTop="true">


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxMainBalanceSettingsConvert"
            android:gravity="center_vertical"

            android:text="@string/main_balance_menu_exchange"
            android:textColor="@color/custom_text_gray_dark"
            android:textSize="@dimen/text_size_body"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutItemMainBalanceMenuFormat"
        android:layout_below="@+id/layoutItemMainBalanceMenuExchangeType">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxMainBalanceSettingsShowCents"
            android:gravity="center_vertical"

            android:text="@string/main_balance_menu_show_cents"
            android:textColor="@color/custom_text_gray_dark"
            android:textSize="@dimen/text_size_body"/>

    </LinearLayout>
</RelativeLayout>