<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxMainBalanceSettingsConvert"
            android:gravity="center_vertical"

            android:layout_alignParentTop="true"

            android:text="@string/main_balance_menu_exchange"
            android:textColor="@color/custom_text_gray_dark"
            android:textSize="@dimen/text_size_body"/>


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxMainBalanceSettingsShowCents"
            android:gravity="center_vertical"

            android:text="@string/main_balance_menu_show_cents"
            android:textColor="@color/custom_text_gray_dark"
            android:textSize="@dimen/text_size_body"

            android:layout_below="@+id/checkBoxMainBalanceSettingsConvert"/>


</RelativeLayout>