<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutActTransactionParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/toolbar" />


    <android.support.design.widget.TabLayout
        android:id="@+id/tabsAddTransaction"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabs_height"
        android:background="?attr/colorPrimary"
        android:layout_marginTop="@dimen/toolbar_height"
        app:tabMode="fixed"
        app:tabTextAppearance="@style/TabsFont"
        app:tabIndicatorColor="@color/custom_text_light"
        app:tabIndicatorHeight="2dp"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabsAddTransaction">


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_shadow_height"
            android:background="@drawable/toolbar_drop_shadow" />

    </FrameLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/pagerAddTransaction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabsAddTransaction"/>


</RelativeLayout>