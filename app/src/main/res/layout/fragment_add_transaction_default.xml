<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="@dimen/padding_big_card_side"
        android:layout_marginStart="@dimen/padding_big_card_side"
        android:layout_marginRight="@dimen/padding_big_card_side"
        android:layout_marginEnd="@dimen/padding_big_card_side"
        android:layout_centerHorizontal="true"
        android:id="@+id/cardChangeExpenseElements"
        card_view:cardElevation="4dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">


            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilTextTransSum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_centerHorizontal="true">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="6"
                        android:id="@+id/editTextTransSum"
                        android:hint="@string/sum_hint"
                        android:maxLength="12"
                        android:layout_centerHorizontal="true"
                        style="@style/TitleFont"/>

                </android.support.design.widget.TextInputLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tilTextTransSum"
                    android:layout_marginTop="20dp"
                    android:id="@+id/linLayAddTransRadioButtonDate">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date"
                            android:id="@+id/tvTransactionDateTitle"
                            android:clickable="true"
                            style="@style/BodyFontSecondary"

                            android:layout_marginLeft="34dp"
                            android:layout_marginStart="34dp"
                            android:layout_marginTop="8dp"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date"
                            android:id="@+id/tvTransactionDate"
                            android:clickable="true"
                            style="@style/SubheadFont"

                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="34dp"
                            android:layout_marginStart="34dp"
                            android:layout_below="@+id/tvTransactionDateTitle"/>

                    </RelativeLayout>




                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/radioGroup"
                        android:layout_marginLeft="24dp"
                        android:layout_marginStart="24dp">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/radiobtn_cost"
                            android:id="@+id/radioButtonCost"
                            android:checked="true"
                            style="@style/SubheadFont"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/radiobtn_income"
                            android:id="@+id/radioButtonIncome"
                            style="@style/SubheadFont"/>
                    </RadioGroup>



                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linLayAddTransRadioButtonDate"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="16dp"
                    android:id="@+id/linLayAddTrans1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/expense"
                        android:id="@+id/tvExpense"
                        android:layout_weight="1"
                        android:layout_marginStart="34dp"
                        android:layout_marginLeft="34dp"
                        style="@style/BodyFontSecondary"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/category"
                        android:id="@+id/tvCategory"
                        android:layout_weight="1"

                        android:layout_marginStart="18dp"
                        android:layout_marginLeft="18dp"
                        style="@style/BodyFontSecondary"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/linLayAddTrans2"
                    android:layout_below="@+id/linLayAddTrans1"
                    android:layout_marginTop="2dp">

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinAddTransExpense"
                        android:spinnerMode="dialog"
                        android:prompt="@string/expense"
                        android:layout_weight="1"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="6dp"/>

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinAddTransCategory"
                        android:spinnerMode="dialog"
                        android:prompt="@string/category"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="6dp"/>
                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</RelativeLayout>