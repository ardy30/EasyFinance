<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/ivSpinCatCustom"

        android:layout_marginLeft="@dimen/margin_spinner_elements"
        android:layout_marginStart="@dimen/margin_spinner_elements"
        android:layout_marginTop="@dimen/margin_spinner_top_bottom"
        android:layout_marginBottom="@dimen/margin_spinner_top_bottom"
        android:layout_marginRight="@dimen/margin_spinner_elements"
        android:layout_marginEnd="@dimen/margin_spinner_elements"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SpinnerFont"
        android:id="@+id/tvSpinCatCustom"

        android:layout_marginTop="@dimen/margin_spinner_top_bottom"
        android:layout_marginBottom="@dimen/margin_spinner_top_bottom"/>
</LinearLayout>