<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_top_fragments"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardMainBalance"
                card_view:cardElevation="2dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linLayoutMainBalanceTitle">


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_current_balance"
                            android:id="@+id/tvMainCurrentBalance"
                            android:layout_marginLeft="40dp"
                            android:layout_marginStart="40dp"
                            style="@style/TitleFont"
                            android:layout_marginTop="5dp"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinMainCurrency"
                            android:layout_marginTop="2dp"/>

                        </RelativeLayout>

                    </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linLayoutMainBalanceChart"
                android:layout_below="@+id/linLayoutMainBalanceTitle">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_cash"
                        android:id="@+id/tvMainCash"
                        android:layout_marginTop="24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        style="@style/SubheadFont" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_card"
                        android:id="@+id/tvMainCard"
                        android:layout_below="@+id/tvMainCash"
                        android:layout_alignLeft="@+id/tvMainCash"
                        android:layout_alignStart="@+id/tvMainCash"
                        android:layout_marginTop="4dp"
                        style="@style/SubheadFont" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_deposit"
                        android:id="@+id/tvMainDeposit"
                        android:layout_below="@+id/tvMainCard"
                        android:layout_alignLeft="@+id/tvMainCard"
                        android:layout_alignStart="@+id/tvMainCard"
                        android:layout_marginTop="4dp"
                        style="@style/SubheadFont" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_debt"
                        android:id="@+id/tvMainDebt"
                        android:layout_below="@+id/tvMainDeposit"
                        android:layout_alignLeft="@+id/tvMainDeposit"
                        android:layout_alignStart="@+id/tvMainDeposit"
                        android:layout_marginTop="4dp"
                        style="@style/SubheadFont" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="7">


                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/chartMainBalance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linLayoutMainBalanceSum"
                android:layout_below="@+id/linLayoutMainBalanceChart"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/main_sum"
                    android:id="@+id/tvMainSum"
                    style="@style/SubheadFont"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMainSumValue"
                    style="@style/SubheadFont"
                    android:layout_weight="7"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>







            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardMainStatistic"
                card_view:cardElevation="2dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_below="@+id/cardMainBalance" >



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linLayoutMainStatisticTitle">


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_statistic"
                    android:id="@+id/tvMainStatistic"
                    style="@style/TitleFont"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginStart="40dp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinMainPeriod"
                        android:layout_marginTop="2dp"/>

                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linLayoutMainStatisticChart"
                    android:layout_below="@+id/linLayoutMainStatisticTitle">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_income"
                    android:id="@+id/tvMainIncome"
                    android:layout_marginTop="24dp"
                    style="@style/SubheadFont" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_cost"
                    android:id="@+id/tvMainCost"
                    android:layout_below="@+id/tvMainIncome"
                    android:layout_alignLeft="@+id/tvMainIncome"
                    android:layout_alignStart="@+id/tvMainIncome"
                    android:layout_marginTop="6dp"
                    style="@style/SubheadFont" />

                </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="7" >


                        <com.github.mikephil.charting.charts.HorizontalBarChart
                            android:id="@+id/chartMainStatistic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />


                    </RelativeLayout>

                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linLayoutMainStatisticSum"
                    android:layout_below="@+id/linLayoutMainStatisticChart"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp">




                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/main_sum"
                        android:id="@+id/tvMainStatisticSumTitle"
                        style="@style/SubheadFont"
                        android:layout_weight="2"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMainStatisticSum"
                    style="@style/SubheadFont"
                    android:layout_weight="7"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"/>

                </LinearLayout>

            </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>