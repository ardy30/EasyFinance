<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardItemExpense"
        card_view:cardElevation="@dimen/elevation_small"
        android:layout_margin="@dimen/elevation_small">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/common_padding_large"
            android:paddingRight="@dimen/common_padding_large"
            android:paddingTop="@dimen/common_padding_medium"
            android:paddingBottom="@dimen/common_padding_medium"
            android:background="@drawable/recycler_item_selector">


            <ImageView
                android:layout_width="@dimen/icon_big"
                android:layout_height="@dimen/icon_big"
                android:id="@+id/ivItemFragmentAccountType"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/common_padding_large"
                android:contentDescription="@string/account_type"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvItemFragmentAccountName"
                android:layout_toRightOf="@+id/ivItemFragmentAccountType"
                android:singleLine="true"
                android:layout_alignParentTop="true"
                style="@style/SubheadFont" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvItemFragmentAccountAmount"
                android:layout_marginTop="@dimen/common_padding_small"
                android:layout_below="@+id/tvItemFragmentAccountName"
                android:layout_toRightOf="@+id/ivItemFragmentAccountType"
                android:singleLine="true"
                style="@style/TitleFontSecondary" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>